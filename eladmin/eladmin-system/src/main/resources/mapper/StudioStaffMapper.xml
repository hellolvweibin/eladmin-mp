<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="me.zhengjie.modules.studio.mapper.StudioStaffMapper">
    <resultMap id="BaseResultMap" type="me.zhengjie.modules.studio.domain.StudioStaff">
        <id column="staff_id" property="staffId"/>
        <result column="staff_name" property="staffName"/>
        <result column="staff_name_c" property="staffNameC"/>
        <result column="staff_sex" property="staffSex"/>
        <result column="staff_title" property="staffTitle"/>
        <result column="staff_studio_id" property="staffStudioId"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <resultMap id="WorkRoleResMap" type="me.zhengjie.modules.studio.domain.dto.StudioStaffWorkRoleDTO">
        <id column="id" property="id"/>
        <result column="staff_id" property="staffId"/>
        <result column="staff_name" property="staffName"/>
        <result column="staff_name_c" property="staffNameC"/>
        <result column="staff_title" property="staffTitle"/>
        <result column="staff_tag" property="staffTag"/>
    </resultMap>

    <sql id="Base_Column_List">
        staff_id, staff_name, staff_name_c, staff_sex,staff_title, staff_studio_id, create_time, update_time
    </sql>

    <select id="findAll" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from studio_staff
        <where>
            <if test="criteria.staffName != null and criteria.staffName != ''">
                and staff_name like concat('%', #{criteria.staffName}, '%')
            </if>
            <if test="criteria.staffNameC != null and criteria.staffNameC != ''">
                and staff_name_c like concat('%', #{criteria.staffNameC}, '%')
            </if>
        </where>
        order by staff_id desc
    </select>

    <sql id="Staff_Role_Column_List">
        id, studio_staff.staff_id, staff_name, staff_name_c, staff_title, staff_tag
    </sql>

    <select id="findAllByWork" resultMap="WorkRoleResMap">
        select
        <include refid="Staff_Role_Column_List"/>
        from studio_staff
        join studio_work_staff on studio_staff.staff_id = studio_work_staff.staff_id
        where studio_work_staff.work_id = #{workId}
    </select>
</mapper>
