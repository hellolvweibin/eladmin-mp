<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="me.zhengjie.modules.studio.mapper.StudioCarouselMapper">
    <resultMap id="BaseResultMap" type="me.zhengjie.modules.studio.domain.StudioCarousel">
        <id column="id" property="id"/>
        <result column="carousel_image" property="carouselImage"/>
        <result column="carousel_status" property="carouselStatus"/>
        <result column="carousel_offset_x" property="carouselOffsetX"/>
        <result column="carousel_offset_y" property="carouselOffsetY"/>
        <result column="carousel_height" property="carouselHeight"/>
        <result column="carousel_width" property="carouselWidth"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, carousel_image, carousel_status,carousel_offset_x, carousel_offset_y, carousel_height, carousel_width, create_time, update_time
    </sql>

    <select id="findAll" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from studio_carousel
        <where>
            <if test="criteria.carouselStatus != null">
                and carousel_status = #{criteria.carouselStatus}
            </if>
        </where>
        order by id desc
    </select>
</mapper>
